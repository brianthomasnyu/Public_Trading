# ========================================
# FRONTEND ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env and update the values

# Backend API URL (orchestrator service)
REACT_APP_API_URL=http://localhost:8000

# Environment mode
REACT_APP_ENV=development

# Enable debug mode for API calls
REACT_APP_DEBUG=true

# Mock data toggle (set to false when backend is fully ready)
REACT_APP_USE_MOCK_DATA=true

# WebSocket URL for real-time updates (future feature)
REACT_APP_WS_URL=ws://localhost:8000/ws

# Polling intervals (in milliseconds)
REACT_APP_TIMELINE_REFRESH_INTERVAL=30000
REACT_APP_AGENT_STATUS_REFRESH_INTERVAL=30000
REACT_APP_TRADING_STATS_REFRESH_INTERVAL=30000